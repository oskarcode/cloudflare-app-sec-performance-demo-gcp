# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=demo.oskarcode.com,www.demo.oskarcode.com,your-cloud-run-domain.run.app

# Database Configuration
# For local development with Docker Compose:
DATABASE_URL=postgresql://postgres:postgres@db:5432/cloudflare_demo_ecommerce

# For production with Cloud SQL:
# DATABASE_URL=postgresql://username:password@/database_name?host=/cloudsql/project:region:instance

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-east4

# Cloudflare Configuration (optional)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Static Files Storage (optional - for Cloud Storage)
GS_BUCKET_NAME=your-static-files-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
